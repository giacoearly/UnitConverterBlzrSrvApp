@page "/"

<PageTitle>Index</PageTitle>

@page "/conversion"

<h3>Feet to Meters and Meters to Feet Converter</h3>

<div>
    <label for="feetInput">Enter feet:</label>
    <input id="feetInput" @bind="feet" />
    <button @onclick="ConvertFeetToMeters">Convert</button>
</div>

<div>
    <label for="metersInput">Enter meters:</label>
    <input id="metersInput" @bind="meters" />
    <button @onclick="ConvertMetersToFeet">Convert</button>
</div>

<div>
    <p>@feet feet is equivalent to @meters meters.</p>
</div>

<div>
    <p>@meters meters is equivalent to @feet feet.</p>
</div>

@code {
    private double feet;
    private double meters;

    private void ConvertFeetToMeters()
    {
        meters = feet * 0.3048;
    }

    private void ConvertMetersToFeet()
    {
        feet = meters / 0.3048;
    }
}
